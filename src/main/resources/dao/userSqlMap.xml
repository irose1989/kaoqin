<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.isoftstone.kaoqin.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.isoftstone.kaoqin.bean.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="name" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="sex" property="sex" jdbcType="VARCHAR" />
        <result column="deptno" property="dept_no" jdbcType="INTEGER"/>
        <result column="sal" property="sal" jdbcType="DOUBLE" />
    </resultMap>
    <sql id="Base_Column_List">
        id, username, password,sex,deptno,sal
    </sql>
    <!--根据用户名查找-->
    <select id="findByName" resultMap="BaseResultMap"
            parameterType="string">
        select
        <include refid="Base_Column_List" />
        from emp_user
        where username = #{name,jdbcType=VARCHAR}
    </select>

    <!--注册生成的用户-->
    <insert id="registUser"
            parameterType="com.isoftstone.kaoqin.bean.User">
        INSERT INTO  emp_user
        (username,password,sex,deptno)
        VALUES
        (
         #{name,jdbcType=VARCHAR},
         #{password,jdbcType=VARCHAR},
         #{sex,jdbcType=VARCHAR},
         #{dept_no,jdbcType=INTEGER}
        )
    </insert>

</mapper>