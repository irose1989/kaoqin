<body>
        <div class="rolling">
            <div class="row" >
                <select class="span2" name="year">
                    <option value="2015" selected>2015</option>
                    <option value="2016" >2016</option>
                    <option value="2017" >2017</option>
                    <option value="2018" >2018</option>
                    <option value="2019" >2019</option>
                </select>年
                <select  class="span2" name="month">
                    <option value="9" selected>9</option>
                    <option value="10" >10</option>
                    <option value="11" >11</option>
                    <option value="12" >12</option>
                </select>月
            </div>

            <table class="table table-striped table-bordered table-hover ">
                <thead>
                <tr>
                    <th>序号</th>
                    <th>姓名</th>
                    <th class="col-sm-1">实际项目</th>
                    #foreach($item in $!month.downDateList)
                    <th class="">$item</th>
                    #end
                    <th>加班合计</th>
                </tr>
                </thead>
                <tbody>

                #foreach($!item in $!list)
                <tr>
                    <td>$!velocityCount</td>
                    <td>$!item.user.realName</td>
                    <td>$!item.project.projectName</td>
                    #foreach($item in $!month.downDateList)
                        <th >加班2</th>
                    #end
                    <th></th>
                </tr>
                #end
                </tbody>
            </table>

        </div>
        <button class="btn btn-info" href="#" id="up_month" value="0">上半月</button>
        <button class="btn btn-info " id="down_month" value="1">下半月</button>
</body>